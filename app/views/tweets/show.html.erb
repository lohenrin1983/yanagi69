<div align="center">
 <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @tweet.video %>" frameborder="0" allowfullscreen></iframe><br>
 </div>


 <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @tweet.title %></h3>
  </div>
  <a href="/users/<%= @tweet.user_id %>">
  <button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-user" 
  aria-hidden="true"></span> <%= @tweet.user.nickname %>
  </button>
  </a>
</div>
<div class="panel panel-default">
  <div class="panel-heading">投稿者コメント</div>
  <div class="panel-body">
    <%= simple_format(@tweet.text) %>
  </div>
</div>

    <!-- ここからフォーム -->
  
    <% if current_user %>
      <div class="alert alert-success" role="alert">
      この動画にコメントする
      </div>
      <%= form_tag("/tweets/#{@tweet.id}/comments", method: :post) do %>
        <textarea class="form-control" name="text" placeholder="コメントする" rows="3"></textarea>
        <button type="submit" class="btn btn-default">投稿</button>
      <% end %>
    <% end %>
    <br>
  <% if @comments %>
    　　<div class="alert alert-info" role="alert">
          みんなのコメント
        </div>
    <% @comments.each do |comment| %>
        <div class="panel panel-default">
            <a href="/users/<%= comment.user_id %>">
            <button type="button" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-user" 
             aria-hidden="true"></span> <%= comment.user.nickname %>
              </button>
             </a>
　　　　<%= comment.text %>
        </div>
    <% end %>
  <% end %>
  </div>
